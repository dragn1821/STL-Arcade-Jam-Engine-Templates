        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// DRAW SCORE
var spacer = GRID/2;

// HIGH SCORE
font_set(fn_emulator,fa_center,fa_middle,c_white,1);
var center = 8*GRID;
var currentscore = max(joystick1.points,joystick2.points);
if currentscore &gt; highscore { highscore = currentscore; }
draw_text(center,spacer,"HI- " + string(highscore));

// TIMER
var minutes = GAMETIME div 60;
var seconds = GAMETIME mod 60;
if seconds &lt; 10 { seconds = "0" + string(seconds); }
draw_text(center,GRID,string(minutes) + ":" + string(seconds));

// PLAYER 1 SCORE
font_set(fn_emulator,fa_left,fa_middle,c_white,1);
draw_text(spacer,spacer,"1UP");
draw_text(spacer,GRID,joystick1.points);

// PLAYER 2 SCORE
font_set(fn_emulator,fa_right,fa_middle,c_white,1);
var rtalign = room_width-spacer;
draw_text(rtalign,spacer,"2UP");
draw_text(rtalign,GRID,joystick2.points);
</string>
