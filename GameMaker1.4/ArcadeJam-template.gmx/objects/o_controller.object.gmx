            <string>/// GAMETIMER &amp; SCREENSHAKE

//if keyboard_check_pressed(vk_f1) { game_restart(); }
//if keyboard_check_pressed(vk_anykey) { show_debug_message( keyboard_key ); }

GAMETIME = floor(get_timer()/1000000)-gamestart;

// CAMERA SHAKE
view_xview[0] = irandom_range(-SHAKE,SHAKE);
view_yview[0] = irandom_range(-SHAKE,SHAKE);
var angle = SHAKE/SHAKEAMT;
view_angle[0] = random_range(-angle,angle);

if SHAKE &gt; 0 { SHAKE -= 0.5; } else SHAKE = 0;
</string>
