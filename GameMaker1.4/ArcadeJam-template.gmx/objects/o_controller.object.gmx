            <kind>1</kind>
            <string>/// INIT VARIABLES &amp; CREATE JOYSTICKS

// IMPORTANT!  GLOBAL GAME SETTINGS ARE SET 
// TO BE COMPATIBLE WITH WINNITRON GAME LAUNCHER
// DO NOT ADJUST THESE SETTINGS:
// ***SPLASH SCREEN DISABLED***
// ***FULLSCREEN AT GAME START***


// MOVE TO CENTER OF ROOM
x = floor(room_width/2);
y = floor(room_height/2)

// INITIATE GAME TIMER
gamestart = floor(get_timer()/1000000);
globalvar GAMETIME; GAMETIME = 0;

// SET HIGHSCORE
highscore = 0;

// SET GRIDSIZE
globalvar GRID; GRID = sprite_get_width(sp_button); 
// ROOM IS 16 CELLS (WIDTH) x 9 CELLS

// CREATE JOYSTICK 1 &amp; PLAYER 1
joystick1 = instance_create(GRID,room_height,o_joystick);
joystick1.name = "player1";
player1 = instance_create(4*GRID,y,o_player);
player1.name = "player1";
player1.color = c_red;

// CREATE JOYSTICK 2 &amp; PLAYER 2
joystick2 = instance_create(room_width-5*GRID-28,room_height,o_joystick);
joystick2.name = "player2";
player2 = instance_create(room_width-4*GRID,y,o_player);
player2.name = "player2";
player2.color = c_blue;

// SCREEN SHAKE!
globalvar SHAKE; SHAKE = 0;
globalvar SHAKEAMT; SHAKEAMT = 4;
</string>
          </argument>
        </arguments>
      </action>
